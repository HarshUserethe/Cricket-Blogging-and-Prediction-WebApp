<%- include('partials/top-partials.ejs') %>
<title>CricWWW - Blog</title>
<meta name="description" content="Read insightful cricket match predictions and analysis by experts on Who Will Win's blog. Stay informed with detailed forecasts and in-depth commentary on upcoming games.">


<style>
    @media only screen and (max-width: 900px) {
    .blog-fullPage {
    margin-top: 5vw;
    }
    }
</style>
<div class="blog-fullPage">
    <div class="blog-area">
        <div class="headline"><h3 style="text-align: left; font-size: 2.5vw; text-transform: capitalize;"><%=singlePost.attributes.Title%></h3></div>
        <hr>
        <div class="blog-img">
            <img src="<%=singlePost.attributes.imgUrl%>" class="img-fluid" alt="...">
            <div class="image-title"><p style="text-transform: capitalize; color: rgba(0, 0, 0, 0.61);"><%=singlePost.attributes.subtitle%><</p></div>
        </div>
        <div class="blog-writeup" style="font-size: 1.5vw;">
            <%- htmlContent %>
        </div>
    </div>

    <div class="recent-blog">
    <div class="headline" style="margin-top: 6vw;"><h3>Recent Stories</h3></div>

    <div class="other-blogs">

        
        <% recentBlog.slice(Math.max(recentBlog.length - 3, 0)).forEach((item) => { %>
            <div class="card-horizontal">
                <div class="card-img"><img src="<%= item.attributes.imgUrl %>" alt=""></div>
                <div class="text">
                    <div class="subText" style="font-weight: bold;"><a href="/blog/<%=item.id%>" style="color: #000 !important;"><%= item.attributes.Title.length > 40 ? item.attributes.Title.substring(0, 40) + "..." : item.attributes.Title %></a></div>
                    <div class="s-desc"><%= item.attributes.description.substring(0, 40) + "..." %></div>
                    
                </div>
            </div>
        <% }) %>

    

    </div>
    </div>
</div>

   
<script>

    var homeButton = document.getElementById('homeNav');
    
    homeButton.addEventListener("click", function(){
      console.log("CLIKED")
      document.querySelector('.loading-spinner').style.display = 'block';  
      document.querySelector('#b-login').style.display = 'none'; 
      document.querySelector('.lock-icon>i ').style.display = 'none';  
      
    })
    
     window.addEventListener('load', function() {
      // Page has finished loading, hide the loading spinner
      document.querySelector('.loading-spinner').style.display = 'none'; 
      document.querySelector('.lock-icon>i ').style.display = 'block';  
      document.querySelector('#b-login ').style.display = 'block';  
    });
    </script>
    <script src="/javascripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>