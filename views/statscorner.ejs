<title>CricWWW - Stats Corner</title>
<meta name="description" content="Stay updated with the latest IPL points table on Who Will Win. Get team standings, rankings, and match results for the Indian Premier League.">
<%- include('partials/top-partials.ejs') %>

<style>

.blog-fullPage{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 6vw;
    gap: 25px;
}
.match-logo{
    width:  4vw;
    height: 4vw;
    border-radius: 50%;
    background-color: #fff;
    padding: 2px;
}
.match-logo>img{
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 50%;
}
</style>
<div class="blog-fullPage">



          <!-- world cup points table -->
          <div class="wpl-standings"  style="margin-bottom: 50px;">
            <div class="title-space" style=" border-radius: 10px; display: flex; justify-content: center; align-items: center; gap: 20px;">
                <div class="match-logo">
                    <img src="https://www.observerbd.com/2023/12/07/ob_1701947882.JPG" alt="">
                </div>
                <h2>ICC Mens T20 World Cup 2024</h2>
            </div>

             
                <!-- <tr>
                    <p style="color: maroon; font-weight: bold;">The Indian Premier League (IPL) 2024 season is scheduled to commence on March 22, 2024.<p>
                </tr> -->
                <% iplPoints.forEach((group, groupIndex) => { %>
                    <h2 style="margin-top: 2vw; display: flex; justify-content: center; align-items: center; padding: 5px; font-weight: bold; font-size: 1.2rem; text-transform: uppercase; color: #000000a4;"><%= group.name %></h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Position</th>
                                <th scope="col">Team</th>
                                <th scope="col">Matches</th>
                                <th scope="col">Won</th>
                                <th scope="col">Lost</th>
                                <th scope="col">Points</th>
                                <th scope="col">Last 5</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% group.teams.forEach((team, index) => { %>
                                <tr>
                                    <th scope="row" class="rw"><%= index + 1 %></th>
                                    <td class="rw"><%= team.sName %></td>
                                    <td class="rw"><%= team.matches %></td>
                                    <td class="rw"><%= team.won %></td>
                                    <td class="rw"><%= team.lost %></td>
                                    <td class="rw"><%= team.pts %></td>
                                    <td class="rw">
                                        <% team.lastFive.forEach(status => { %>
                                            <% if (status === 'lost') { %>
                                                <i style="color: red;" class="ri-close-circle-fill"></i>
                                            <% } else { %>
                                                <i style="color: green;" class="ri-checkbox-circle-fill"></i>
                                            <% } %>
                                        <% }) %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% }) %>
              
         
            </tbody>
          </table>
        </div>

</div>

<script>

    var homeButton = document.getElementById('homeNav');
    
    homeButton.addEventListener("click", function(){
      console.log("CLIKED")
      document.querySelector('.loading-spinner').style.display = 'block';  
      document.querySelector('#b-login').style.display = 'none'; 
      document.querySelector('.lock-icon>i ').style.display = 'none';  
      
    })
    
     window.addEventListener('load', function() {
      // Page has finished loading, hide the loading spinner
      document.querySelector('.loading-spinner').style.display = 'none';  
    });
    </script>
